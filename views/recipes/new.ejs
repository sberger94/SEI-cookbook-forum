<%- include('../partials/header') %>

<form action="/recipes" method="POST">
    <label>Recipe Name: <input type="text" name="title" required></label>
    <label>Prep Time(mins): <input type="number" name="prepTime" min="0" step="5" required></label>
    <label>Cook Time(mins): <input type="number" name="cookTime" min="0" step="5" required></label>
    <br><label>Steps: <textarea name="content" rows="6" cols="40" required></textarea></label>
    <input type="submit" value="Submit Recipe">
</form>

